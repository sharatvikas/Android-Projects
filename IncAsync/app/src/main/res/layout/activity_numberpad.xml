<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="k00364744.helloworld.tamuk.edu.incasync.Numberpad">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Number"
        android:id="@+id/numpad"
        android:textAlignment="gravity"
        android:paddingTop="8dp"
        android:paddingLeft="5dp"
        android:shadowRadius="1.0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:height="35dp"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/bt1"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/bt2"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_alignLeftto="@id/bt1"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/bt3"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_alignLeftto="@id/bt1"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/bt4"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/bt5"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/bt6"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/bt7"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_alignLeftto="@id/bt1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="190dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/bt8"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="190dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/bt9"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="190dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/bt0"
        android:height="60dp"
        android:layout_below="@+id/numpad"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="270dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:height="70dp"
        android:width="150dp"
        android:layout_below="@+id/numpad"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="340dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/bt0"
        android:layout_alignLeft="@+id/bt7"
        android:layout_alignStart="@+id/bt7" />

</RelativeLayout>
